{
  "name": "figma-fake-it-plugin",
  "version": "1.0.0",
  "description": "Faker texts",
  "main": "build/main.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss --input ./src/ui/input.css --output ./src/ui/output.css",
    "build:js": "build-figma-plugin --typecheck --minify",
    "build:es": "esbuild src/code.ts --outfile=build/main.js --bundle --minify --target=es6",
    "watch:es": "esbuild src/code.ts --outfile=build/main.js --bundle --sourcemap --target=es6 --watch",
    "watch": "npm run build:css && concurrently npm:watch:css npm:watch:js",
    "watch:css": "tailwindcss --input ./src/ui/input.css --output ./src/ui/output.css --watch",
    "watch:js": "build-figma-plugin --typecheck --watch"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@create-figma-plugin/build": "^3.0.2",
    "@create-figma-plugin/tsconfig": "^3.0.2",
    "@figma/plugin-typings": "^1.78.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.5",
    "preact": "^10.18.1",
    "tailwindcss": "^3.3.5",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@create-figma-plugin/ui": "^3.0.2",
    "@create-figma-plugin/utilities": "^3.0.2",
    "@faker-js/faker": "^8.1.0",
    "fuse.js": "^7.0.0",
    "fuzzysort": "^2.0.4"
  },
  "figma-plugin": {
    "api": "1.0.0",
    "name": "Fake it",
    "id": "1291306802526613625",
    "editorType": [
      "figma"
    ],
    "menu": [
      {
        "name": "Fake it",
        "main": {
          "src": "src/code.ts",
          "handler": "run"
        },
        "parameters": [
          {
            "name": "Language",
            "key": "lang",
            "description": "Select a language"
          },
          {
            "name": "Category",
            "key": "category",
            "description": "Select a category"
          },
          {
            "name": "Type",
            "key": "type",
            "description": "Select a data type"
          },
          {
            "name": "Tag layer",
            "key": "tag",
            "description": "Add tag to layer name ?",
            "optional": true
          }
        ]
      },
      {
        "name": "Update selected",
        "main": {
          "src": "src/code.ts",
          "handler": "update"
        },
        "parameters": [
          {
            "name": "Language",
            "key": "lang",
            "description": "Select a language"
          }
        ]
      },
      {
        "name": "Reset history",
        "main": {
          "src": "src/code.ts",
          "handler": "clearHistory"
        }
      },
      {
        "name": "Open UI",
        "main": "src/ui/main.ts",
        "ui": "src/ui/ui.js"
      }
    ],
    "networkAccess": {
      "allowedDomains": [
        "none"
      ]
    }
  }
}
